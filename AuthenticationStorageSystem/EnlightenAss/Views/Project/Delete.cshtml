@model AssClassLibrary.Project

@{
    ViewBag.Title = "Delete";
}

<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>@ViewBag.Title</title>
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="containerDiv">
        <div class ="headerDiv"><img src="/Content/enlighten-logo.png"></div>
        <div class="menuDiv">
            <div class="menuItemDiv menuItemDivIdle">Create new...</div>
            <div class="menuItemDiv menuItemDivIdle">Search</div>
            <div class="menuItemDiv menuItemDivIdle">Clients</div>
            <div class="menuItemDiv menuItemDivIdle">Projects</div>
        </div>
        <div class="contentDiv">

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Project</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Client.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Client.Name)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.DateAdded)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DateAdded)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.isArchived)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.isArchived)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index", new { id = ViewBag.ClientIdNum })
    </p>
}
</div>
     <div class ="footerDiv">Authentication Storage System, Enlighten Designs 2013</div>
    </div>
</body>
</html>
