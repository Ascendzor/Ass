@model IEnumerable<AssClassLibrary.Project>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="/Scripts/buttonMethods.js"></script>
</head>
<body>
    <div class="containerDiv">
        <div class="headerDiv">
            <img src="/Content/enlighten-logo.png">
        </div>
        <div class="titleDiv">Projects</div>
        <div class="contentDiv">

            @Html.ActionLink("Create New", "Create", new { id = ViewBag.ClientId })

            <!--<h3>Client: @ViewBag.ClientName</h3> -->
            <h3>@Html.ActionLink("Clients", "../Client/Index")/<u>@ViewBag.ClientName</u></h3>

            <table>
                <tr class="tableHeader">
                    <th>
                        Project Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateAdded)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.isArchived)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.Name, "../Entry/Index", new { id = item.ProjectId })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateAdded)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isArchived)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ProjectId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ProjectId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ProjectId })
                        </td>
                    </tr>
                }

            </table>
        </div>
        <div class="footerDiv">Authentication Storage System, Enlighten Designs 2013</div>
    </div>
</body>
</html>

