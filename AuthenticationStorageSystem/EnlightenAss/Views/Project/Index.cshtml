@model IEnumerable<AssClassLibrary.Project>

<script src="~/Scripts/KeyboardNav.js"></script>

<directory>
@if (String.IsNullOrEmpty(ViewBag.ClientName))
{
    Write("All Projects");
}else{
    @ViewBag.ClientName
    Write("/");
}
</directory>

<button class="btn btn-small btn-primary" style="float:right;" onclick="requestItem('@ViewBag.ClientId', '/Project/Create')">New Project</button>
<a class="editButton btn btn-small btn-primary" style="float:right;" onclick="requestItem('@ViewBag.ClientId', '/Client/Change')">Change</a>
<hr />

<table class="table table-bordered">
    <tr>
        <th class="table-bordered th" style="width:300px;">Project Name</th>
        <th class="table-bordered th">Notes</th>
    </tr>
    @{int counter =0;}
    @foreach (var item in Model)
    {
        <tr>
            <td id="@counter" onmouseover= "mousedOver(@counter)" onclick="requestItem('@item.ProjectId', '/Entry/Index')">
                @item.Name
            </td>
            <td>@Html.DisplayFor(modelItem => item.Notes)</td>
        </tr>
        counter++;
    }

</table>
<script>
    initialize();
</script>