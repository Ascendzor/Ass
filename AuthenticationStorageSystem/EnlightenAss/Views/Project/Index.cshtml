@model IEnumerable<AssClassLibrary.Project>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>@ViewBag.Title</title>
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="containerDiv">
        <div class ="headerDiv"><img src="/Content/enlighten-logo.png"></div>
        <div class="menuDiv">
            <div class="menuItemDiv menuItemDivIdle">Create new...</div>
            <div class="menuItemDiv menuItemDivIdle">Search</div>
            <div class="menuItemDiv menuItemDivIdle">Clients</div>
            <div class="menuItemDiv menuItemDivIdle">Projects</div>
        </div>
        <div class="contentDiv">

<h1>Projects</h1>


<p>@Html.ActionLink("Create New", "Create", new { id = ViewBag.ClientId })</p>


<h3>@Html.ActionLink("To Clients", "../Client/Index")</h3>
 
<h3>Client: @ViewBag.ClientName</h3>

<table>
    <tr>
        <th>
            Project Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAdded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isArchived)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "../Entry/Index", new { id = item.ProjectId})
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Client.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateAdded)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isArchived)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProjectId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProjectId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProjectId })
        </td>
    </tr>
}

</table>
</div>
     <div class ="footerDiv">Authentication Storage System, Enlighten Designs 2013</div>
    </div>
</body>
</html>

