@model IEnumerable<AssClassLibrary.Project>

@{
        if (ViewBag.ClientName.Length > 30)
        {
            <a onclick="window.location.reload();"><i class="icon-large icon-home"></i></a>
            <p>/ </p>
            <h3>
                @{Write(ViewBag.ClientName.Substring(0, 27));}
                @{Write("...");}
            </h3>
        }
        else
        {
            <a onclick="window.location.reload();"><i class="icon-large icon-home"></i></a>
            <p>/ </p>
            <h3>
                @{Write(ViewBag.ClientName);}
            </h3>
            <p>/ </p>
        }
    }

<div class="rightButtonGroup">
    <button type="button" class="editButton btn btn-default btn-inverse" onclick="requestItem('@ViewBag.ClientId', '/Client/Change')">Modify Client</button>
    <button type="button" class="btn btn-default btn-inverse" style="margin-left:20px" onclick="requestItem('@ViewBag.ClientId', '/Project/Create')">New Project...</button>

</div>
<br />
<p class="text-muted">@ViewBag.ClientNotes</p>
<hr />

<table class="table table-bordered">
    <tr class="table-bordered headerRow">
        <th style="width: 300px;">Project Name</th>
    </tr>
    @{int counter = 0;}
    @foreach (var item in Model)
    {
        
            <tr id="@counter" onclick="requestItem('@item.ProjectId', '/Entry/Index')">
                <td>
                    @item.Name
                </td>
            </tr>
            counter++;
        
    }

</table>
