@model IEnumerable<AssClassLibrary.Project>

<script src="~/Scripts/KeyboardNav.js"></script>

<legend>
    <u>@ViewBag.ClientName/</u>
    <a class="editButton btn btn-small btn-primary" onclick="requestItem('@ViewBag.ClientId', '/Client/Change')">Change</a>
</legend>

<a class="editButton" onclick="requestItem('@ViewBag.ClientId', '/Project/Create')">Create New</a>

<table class="table table-bordered">
    <tr>
        <th class="table-bordered th">Project Name</th>
        <th class="table-bordered th">Notes</th>
    </tr>
    @{int counter =0;}
    @foreach (var item in Model)
    {
        <tr>
            <td id="@counter" onmouseover= "mousedOver(@counter)" onclick="requestItem('@item.ProjectId', '/Entry/Index')">
                @item.Name
            </td>
            <td>@Html.DisplayFor(modelItem => item.Notes)</td>
        </tr>
        counter++;
    }

</table>
<script>
    initialize();
</script>