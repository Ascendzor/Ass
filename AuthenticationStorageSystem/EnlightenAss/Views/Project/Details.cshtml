@model AssClassLibrary.Project

@{
    ViewBag.Title = "Details";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="/Scripts/buttonMethods.js"></script>
</head>
<body>
    <div class="containerDiv">
        <div class="headerDiv">
            <img src="/Content/enlighten-logo.png"></div>
        <div class="titleDiv">Project Details</div>
        <div class="contentDiv">

            <h2>Details</h2>

            <fieldset>
                <legend>Project</legend>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.Name)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Name)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.Client.Name)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Client.Name)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.DateAdded)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.DateAdded)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.isArchived)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.isArchived)
                </div>
            </fieldset>
            <div id="backLink" class="contentButton" onclick="goBack()"><u>Back to List</u></div>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.ProjectId })
            </p>
        </div>
        <div class="footerDiv">Authentication Storage System, Enlighten Designs 2013</div>
    </div>
</body>
</html>
