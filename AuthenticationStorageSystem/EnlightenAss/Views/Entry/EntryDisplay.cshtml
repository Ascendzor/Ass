@model AssClassLibrary.Entry

<a class="editButton btn btn-small btn-primary" style="float:right;" onclick="requestItem('@ViewBag.ProjectIdNum', '/Project/Change')">Change</a>
<br />
<hr />

<table class="table table-bordered">
    <tr>
        <th class="table-bordered th" style="width:300px;">
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th class="table-bordered th" style="width:300px;">
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th class="table-bordered th">
            @Html.DisplayNameFor(model => model.Notes)
        </th>
    </tr>
    <tr>
        <td>
            @Html.DisplayFor(modelItem => Model.Username)
        </td>
        <td>
            <input type="text" value="@Model.Password" id="highlightMe" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Notes)
        </td>
    </tr>
</table>

<script>
    document.getElementById('highlightMe').focus();
    document.getElementById('highlightMe').select();
</script>
