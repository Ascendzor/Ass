@model AssClassLibrary.Entry



<div id="backLink" class="btn btn-small btn-primary" onclick="requestItem('@Model.ProjectId', '/Entry/Index')">Back to List</div>

<a class="editButton btn btn-small btn-primary" onclick="requestItem('@Model.EntryId', '/Entry/Change')">Change</a>

<table class="table table-bordered">

    <tr>
        <th class="table-bordered th">
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th class="table-bordered th">
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th class="table-bordered th">
            @Html.DisplayNameFor(model => model.Notes)
        </th>
    </tr>
    <tr>
        <td>
            @Html.DisplayFor(modelItem => Model.Username)
        </td>
        <td>
            <input type="text" value="@Model.Password" id="highlightMe" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Notes)
        </td>
    </tr>
</table>

<script>
    document.getElementById('highlightMe').focus();
    document.getElementById('highlightMe').select();
</script>
