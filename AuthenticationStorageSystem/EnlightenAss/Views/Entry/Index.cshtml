@model IEnumerable<AssClassLibrary.Entry>

<script src="~/Scripts/KeyboardNav.js"></script>

@if(String.IsNullOrEmpty(ViewBag.ProjectName)){
    Write("All Entries");
}else{
    <directory onclick="requestItem('@ViewBag.ClientIdNum', '/Project/Index');"><a>
    @ViewBag.ClientName
    </a></directory>
    Write(" / ");
    @ViewBag.ProjectName;
    Write(" / ");
}

</directory>
<button class="btn btn-small btn-primary" style="float:right;" onclick="requestItem('@ViewBag.ProjectIdNum', '/Entry/Create')">New Entry</button>
<button class="editButton btn btn-small btn-primary" style="float:right" onclick="requestItem('@ViewBag.ProjectIdNum', '/Project/Change')">Change</button>
<hr />

<table class="table table-bordered">
    <tr>
        <th class="table-bordered th" style="width:300px;">
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th class="table-bordered th" style="width:300px;">
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th class="table-bordered th">
            @Html.DisplayNameFor(model => model.Notes)
        </th>
    </tr>

    @{int counter = 0;}
    @foreach (var item in Model)
    {
        <tr>
            <td id="@counter" onclick="requestItem('@item.EntryId', '/Entry/EntryDisplay')" onmouseover= "mousedOver(@counter)">
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
        </tr>
        counter++;
    }

</table>
<script>
    initialize();
</script>