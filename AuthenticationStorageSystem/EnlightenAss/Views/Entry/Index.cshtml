@model IEnumerable<AssClassLibrary.Entry>


<legend><a onclick="requestItem('0', '/Client/Index')">Clients</a>/<a onclick="requestItem('@ViewBag.ClientIdNum', '/Project/Index')">@ViewBag.ClientName</a>/<u>@ViewBag.ProjectName</u></legend>

<a style="display:none" class="editButton" onclick="requestItem('@ViewBag.ProjectIdNum', '/Entry/Create')">Create New</a>
<table class="table table-bordered">
    <tr>
        <th class="table-bordered th">
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th class="table-bordered th">
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th class="table-bordered th">
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th style="display:none" class="table-borded th editButton"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td style="display:none" class="editButton" onclick="requestItem('@item.EntryId', '/Entry/Change')">
                Change
            </td>
        </tr>
    }

</table>
