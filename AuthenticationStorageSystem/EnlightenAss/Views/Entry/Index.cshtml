@model IEnumerable<AssClassLibrary.Entry>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script type="text/javascript" src="/Scripts/buttonMethods.js"></script>
</head>
<body>
    <div class="containerDiv">
        <div class="headerDiv">
            <img src="/Content/enlighten-logo.png">
        </div>
        
        <div class="menuDiv">
            <div class="menuItemDiv">@Html.ActionLink("Search", "../Search")</div>
            <div class="menuItemDiv">@Html.ActionLink("Navigate", "../Client")</div>
        </div>

        <div class="contentDiv">
            
            <legend>@Html.ActionLink("Clients", "../Client/Index")/@Html.ActionLink((string)ViewBag.ClientName, "../Project/Index", new { id = ViewBag.ClientIdNum })/<u>@ViewBag.ProjectName</u></legend>
            @Html.ActionLink("Create New", "Create", new { id = ViewBag.ProjectIdNum })
            <table class="table table-bordered">
                <tr>
                    <th class="table-bordered th">
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th class="table-bordered th">
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th class="table-bordered th">
                        @Html.DisplayNameFor(model => model.Website)
                    </th>
                    <th class="table-bordered th">
                        @Html.DisplayNameFor(model => model.Notes)
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Website)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Notes)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.EntryId }) |
            @Html.ActionLink("Details", "Details", new { id = item.EntryId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.EntryId })
                        </td>
                    </tr>
                }

            </table>
        </div>
        <div class="footerDiv">Authentication Storage System, Enlighten Designs 2013</div>
    </div>
</body>
</html>
