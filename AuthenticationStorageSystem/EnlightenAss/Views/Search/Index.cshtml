@model IEnumerable<AssClassLibrary.Client>

@{
    ViewBag.Title = "Clients";
}
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>@ViewBag.Title</title>
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="containerDiv">
        <div class ="headerDiv"><img src="/Content/enlighten-logo.png"></div>
        <div class="titleDiv">Search</div>
        
        
        <div class="contentDiv">

        <!-- Search box + button, button onclick = ajax request to Controller search action -->
        <fieldset>
        <legend>Search</legend>
        <input id="searchText" name="searchtext" type="text"/>
        <button id="myButton" onclick="test()">Go</button>
        </fieldset>

        <script type="text/javascript">
            function test() {
                $.ajax({
                    url: '/Search/Results',
                    data: { searchText: document.getElementById("searchText").value },
                    dataType: 'html',
                    success: function (data) {
                        $('#partialSearchResults').html(data);
                    }
                });
            }
        </script>

        <!-- Search results placed inside here -->
        <div id="partialSearchResults"></div>
     </div>
     <div class ="footerDiv">Authentication Storage System, Enlighten Designs 2013</div>
    </div>
</body>
</html>
