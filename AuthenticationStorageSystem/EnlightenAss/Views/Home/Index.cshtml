﻿<!DOCTYPE html>
<html>
<head>
    <title>Layout Page Content</title>
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="/Content/Site.css" rel="Stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/Home.js"></script>
    <script src="~/Scripts/KeyboardNav.js"></script>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top navbar-inner" style="min-height: 30px">
        <div class="mainTitle">
            <a onclick="home();">
                <i class="icon-large icon-white icon-home" style="margin-right: 3px"></i></a>Authentication Storage System
            
			<input id="searchText" oninput="search()" name="searchtext" type="text" autocomplete="off" />
            <button type="button" id="myButton" style="margin-bottom: 5px; margin-left: 5px" onclick="search(); $('#searchText').focus();" class="btn btn-default navbar-btn">Go</button>


            <!-- Traffic Light -->
            <div id="trafficLights" style="display: inline">
                <input style="display: none" checked="checked" type="checkbox" id="Development" onclick="filterByDevState('Development')" />
                <input style="display: none" checked="checked" type="checkbox" id="Testing" onclick="filterByDevState('Testing')" />
                <input style="display: none" checked="checked" type="checkbox" id="Staging" onclick="filterByDevState('Staging')" />

                <label for="Staging" class="TrafficLight">
                    <img id="StagingLightOn" src="Content/Traffic_Lights/StagingOn.png" style="width: 47px; height: 59px" />
                    <img id="StagingLightOff" src="Content/Traffic_Lights/StagingOff.png" style="width: 47px; height: 59px; display: none" /></label>

                <label for="Testing" class="TrafficLight">
                    <img id="TestingLightOn" src="Content/Traffic_Lights/TestingOn.png" style="width: 40px; height: 59px" />
                    <img id="TestingLightOff" src="Content/Traffic_Lights/TestingOff.png" style="width: 40px; height: 59px; display: none" /></label>

                <label for="Development" class="TrafficLight">
                    <img id="DevelopmentLightOn" src="Content/Traffic_Lights/DevelopmentOn.png" style="width: 42px; height: 59px" />
                    <img id="DevelopmentLightOff" src="Content/Traffic_Lights/DevelopmentOff.png" style="width: 42px; height: 59px; display: none" /></label>
            </div>
        </div>
        <div class="feedback">Feedback: marcel@optimaldesign.co.nz</div>
    </div>
    <div class="containerDiv">
        <div class="contentDiv">
            <div id="errorDiv"></div>
            <!-- Dynamic content placed in here -->
            <div id="partialDiv"></div>
        </div>
    </div>
    <div class="btn" onclick="printHistoryLength();"></div>
</body>
</html>
