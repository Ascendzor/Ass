@model AssClassLibrary.Client

<h2>Change</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Client</legend>

        @Html.HiddenFor(model => model.ClientId)

        <div class="editor-label">
            Client Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            Notes
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Notes)
            @Html.ValidationMessageFor(model => model.Notes)
        </div>

        <div class="details-label">
            Date Added
        </div>
        <div class="details-field">
            @Model.DateAdded
        </div>
        <div class="details-label">
            Last Modified
        </div>
        <div class="details-field">
            @Model.LastModified
        </div>

        <input class="btn btn-small btn-primary" type="button" value="Save Changes" onclick="ajaxSubmitForm(this)"/>
        <div id="backLink" class="btn btn-small btn-primary" onclick="requestItem('@Model.ClientId', '/Project/Index')">Back to List</div>

    </fieldset>
}

<!-- Set selected input box -->
<script>
    $("#Name").focus();
</script>

<!-- Seperate Form for deleting the item -->
@using (Html.BeginForm("Delete", "Client", FormMethod.Post))
{
    @Html.HiddenFor(model => model.ClientId)
    <input type="button" value="Delete" class="btn btn-small btn-primary" onclick="ajaxSubmitForm(this)" />
}
