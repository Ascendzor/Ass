@model AssClassLibrary.Client

<h2>Change</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Client</legend>

        @Html.HiddenFor(model => model.ClientId)

        <div class="editor-label">
            <!--@Html.LabelFor(model => model.Name)-->
            Client Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            Notes
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Notes)
            @Html.ValidationMessageFor(model => model.Notes)
        </div>

        <div class="details-label">
            Date Added
        </div>
        <div class="details-field">
            @Model.DateAdded
        </div>
        <div class="details-label">
            Last Modified
        </div>
        <div class="details-field">
            @Model.LastModified
        </div>

        <input name="submitButton" type="submit" value="Save Changes" class="btn btn-small btn-primary" />
        <input name="submitButton" type="submit" value="Delete" class="btn btn-small btn-primary" />
        <div id="backLink" class="btn btn-small btn-primary" onclick="requestItem('0', '/Client/Index')">Back to List</div>

    </fieldset>
}


