@model IEnumerable<AssClassLibrary.Client>

@{
    ViewBag.Title = "Clients";
}
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>@ViewBag.Title</title>
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="containerDiv">
        <div class ="headerDiv"><img src="/Content/enlighten-logo.png"></div>
        <div class="titleDiv">Clients</div>
                
        
        <div class="contentDiv">
            @using (Html.BeginForm("Search", "Search"))
                {
                 @Html.ValidationSummary(true)
                <fieldset>
                <legend>Search</legend>
                <input id="searchText" name="searchtext" type="text"/>
                <input id="submitSearch" type="submit" value="Go" />
                </fieldset>
                }
    
        

        

        @Html.ActionLink("Create New", "Create")
        
        <h3>All clients</h3>
        <table>
        <tr class="tableHeader">
         <th>
            <!--@Html.DisplayNameFor(model => model.Name)-->
            Client Name
         </th>
         <th>
            @Html.DisplayNameFor(model => model.DateAdded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isArchived)
        </th>
        <th></th>
        </tr>

        @foreach (var item in Model) {
        <tr class="rowHighlight">
            <td>
             <!--@Html.DisplayFor(modelItem => item.Name)-->
                @Html.ActionLink(item.Name, "../Project/Index", new { id=item.ClientId })
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.isArchived)
            </td>
             <td>
              @Html.ActionLink("Edit", "Edit", new { id=item.ClientId }) |
              @Html.ActionLink("Details", "Details", new { id=item.ClientId }) |
              @Html.ActionLink("Delete", "Delete", new { id=item.ClientId })
         </td>
        </tr>
        }
     </table>
     </div>
     <div class ="footerDiv">Authentication Storage System, Enlighten Designs 2013</div>
    </div>
</body>
</html>
