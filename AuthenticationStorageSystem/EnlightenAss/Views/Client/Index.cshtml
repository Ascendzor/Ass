@model IEnumerable<AssClassLibrary.Client>


<h3>All Clients</h3>

<div class="rightButtonGroup">
    <button type="button" class="btn btn-default btn-inverse" onclick="requestItem('0', '/Client/Create')">New Client...</button>
</div>
<br>
<hr />


<table class="table table-bordered">
    <tr class="table-bordered headerRow">
        <th style="width: 300px;">Client Name</th>
        <th style="width: 100px;">isArchived</th>
    </tr>
    @{int counter = 0;}
    @foreach (var item in Model)
    {
        <tr id="@counter" onclick="requestItem('@item.ClientId', '/Project/Index')">
            <td>
                @item.Name
            </td>
            <td class="archivetd" onclick="toggleIsArchived('@item.ClientId', 'Client/toggleIsArchived', $(this).children(), true);">
                <input class="archiveCheckBox" type="checkbox" checked="@item.isArchived" onclick="toggleIsArchived('@item.ClientId', 'Client/toggleIsArchived', this, false);"/>
            </td>
        </tr>
        counter++;
    }
</table>
