@model IEnumerable<AssClassLibrary.Client>

@{
    ViewBag.Title = "Clients";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="/Scripts/buttonMethods.js"></script>
</head>
<body>
    <div class="containerDiv">
        <div class="headerDiv">
            <img src="/Content/enlighten-logo.png"></div>
        <div class="titleDiv">Clients</div>


        <div class="contentDiv">
            @Html.ActionLink("Create New", "Create")

            <h3>Clients</h3>
            <table>
                <tr class="tableHeader">
                    <th>id</th>
                    <th>Client Name</th>
                    <th>Date Added</th>
                    <th>isArchived</th>
                    <th>Notes</th>
                    <th>LastModified</th>
                    <th>LastModifiedBy</th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr class="rowHighlight">
                        <td>@Html.DisplayFor(modelIem => item.ClientId)</td>
                        <td>@Html.ActionLink(item.Name, "../Project/Index", new { id = item.ClientId })</td>
                        <td>@Html.DisplayFor(modelItem => item.DateAdded)</td>
                        <td>@Html.DisplayFor(modelItem => item.isArchived)</td>
                        <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastModified)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastModifiedBy)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ClientId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ClientId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ClientId })
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="footerDiv">Authentication Storage System, Enlighten Designs 2013</div>
    </div>
</body>
</html>
