@model AssClassLibrary.Client

@{
    ViewBag.Title = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="/Scripts/buttonMethods.js"></script>
</head>
<body>
    <div class="containerDiv">
        <div class="headerDiv">
            <img src="/Content/enlighten-logo.png"></div>
        <div class="titleDiv" style="float: left">Delete Client</div>
        <div class="subtitleDiv">Are you sure you want to delete this?</div>

        <div class="contentDiv">


            <fieldset>
                <legend>Client</legend>

                <div class="display-label">
                    <!--@Html.DisplayNameFor(model => model.Name)-->
                    Client Name
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Name)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.DateAdded)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.DateAdded)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.isArchived)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.isArchived)
                </div>
            </fieldset>
            @using (Html.BeginForm())
            {
                <p>
                    <input type="submit" value="Delete" />
                </p>
                <div id="backLink" class="contentButton" onclick="goBack()"><u>Back to List</u></div>
            }
        </div>
        <div class="footerDiv">Authentication Storage System, Enlighten Designs 2013</div>
    </div>
</body>
</html>
