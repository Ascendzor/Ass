@model AssClassLibrary.Client

@{
    ViewBag.Title = "Edit";
}

<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>@ViewBag.Title</title>
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="containerDiv">
        <div class ="headerDiv"><img src="/Content/enlighten-logo.png"></div>
        <div class="titleDiv">Edit Client</div>
        <div class="contentDiv">

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Client</legend>

        @Html.HiddenFor(model => model.ClientId)

        <div class="editor-label">
            <!--@Html.LabelFor(model => model.Name)-->
            Client Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateAdded)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateAdded)
            @Html.ValidationMessageFor(model => model.DateAdded)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.isArchived)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.isArchived)
            @Html.ValidationMessageFor(model => model.isArchived)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

</div>
     <div class ="footerDiv">Authentication Storage System, Enlighten Designs 2013</div>
    </div>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
