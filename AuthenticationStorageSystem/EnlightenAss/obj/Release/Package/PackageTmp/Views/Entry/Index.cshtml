@model IEnumerable<AssClassLibrary.Entry>

<script src="~/Scripts/KeyboardNav.js"></script>

@if(String.IsNullOrEmpty(ViewBag.ProjectName)){
    Write("All Entries");
}else{
    <directory onclick="requestItem('@ViewBag.ClientIdNum', '/Project/Index');"><a>
    @ViewBag.ClientName
    </a></directory>
    Write(" / ");
    @ViewBag.ProjectName;
    Write(" / ");
}

<div style="margin-left:455px;margin-top:0px;">
    <button class="editButton btn btn-small btn-primary" onclick="requestItem('@ViewBag.ProjectIdNum', '/Project/Change')">Modify Project</button>
    <button class="btn btn-small btn-primary" style="margin-left:20px" onclick="requestItem('@ViewBag.ProjectIdNum', '/Entry/Create')">New Entry</button>
</div>
<hr />


<table class="table table-bordered">
    <tr class="table-bordered headerRow">
        <th style="width:300px;">
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th style="width:300px;">
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
    </tr>

    @{int counter = 0;}
    @foreach (var item in Model)
    {
        <tr id="@counter" onclick="requestItem('@item.EntryId', '/Entry/EntryDisplay')" onmouseover= "mousedOver(@counter)">
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
        </tr>
        counter++;
    }

</table>
<script>
    initialize();
</script>